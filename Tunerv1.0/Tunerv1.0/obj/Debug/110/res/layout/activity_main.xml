<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


	<Picker x:Name="comboBox" android:layout_height="224dp" android:layout_width="206dp">
		<Picker.ItemsSource>
			<x:Array Type="{x:Type x:String}">
				<x:String>Option 1</x:String>
				<x:String>Option 2</x:String>
				<x:String>Option 3</x:String>
			</x:Array>
		</Picker.ItemsSource>
	</Picker>
	
	<Button
			android:text="Button"
			android:layout_width="135dp"
			android:layout_height="71dp" android:id="@+id/button"/>
	<CheckBox
			android:text="CheckBox"
			android:layout_width="209dp"
			android:layout_height="123dp" android:id="@+id/checkBox" android:layout_alignParentEnd="true"
			android:layout_marginEnd="-3dp" android:layout_alignParentStart="true" android:layout_marginStart="292dp"
			android:layout_alignParentBottom="true" android:layout_marginBottom="3dp"/>
</RelativeLayout>